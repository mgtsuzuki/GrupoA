<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<% if !@user.recipes.empty? %>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.nome %></td>
        <td><%= recipe.descricao %></td>
        <td><%= link_to 'Show', user_recipe_path(@user, recipe) %></td>
        <td><%= link_to 'Edit', edit_user_recipe_path(@user, recipe) %></td>
        <td><%= link_to 'Destroy', user_recipe_path(@user, recipe), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>Você não posui receitas!</p>
<% end %>

<br>

<%= link_to 'New Recipe', new_user_recipe_path(@user) %>
