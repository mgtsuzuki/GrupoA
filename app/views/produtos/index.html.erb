<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<% if !@user.produtos.empty? %>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Quantidade</th>
      <th>Data validade</th>
      <th>Tipos de quantidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.quantidade %></td>
        <td><%= produto.data_validade %></td>
        <td><%= produto.tipos_de_quantidade %></td>
        <td><%= link_to 'Show', user_produto_path(@user, produto) %></td>
        <td><%= link_to 'Edit', edit_user_produto_path(@user, produto) %></td>
        <td><%= link_to 'Destroy', user_produto_path(@user, produto), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>Você não posui produtos!</p>
<% end %>
<br>

<%= link_to 'New Produto', new_user_produto_path(@user) %>
