<%= form_with(model: [@user, @produto], local: true) do |form| %>
  <% if @produto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@produto.errors.count, "error") %> prohibited this produto from being saved:</h2>

      <ul>
        <% @produto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div class="field">
    <%= form.label :quantidade %>
    <%= form.number_field :quantidade %>
  </div>

  <div class="field">
    <%= form.label :data_validade %>
    <%= form.date_select :data_validade %>
  </div>

  <div class="field">
    <%= form.label :tipos_de_quantidade %>
    <%= form.select :tipos_de_quantidade, Produto.tipos_de_quantidades.keys,
          prompt: 'Escolha o tipo de quantidade' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
